<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SAHCE_UFCG" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/header_text</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/background_fields</item>
    </style>

    <style name="headers_style">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/header_text</item>
    </style>

    <style name="Theme.SAHCE_UFCG.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="header_2">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">10dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">5dp</item>
    </style>


    <style name="Theme.SAHCE_UFCG.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SAHCE_UFCG.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>