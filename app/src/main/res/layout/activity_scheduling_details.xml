<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SchedulingDetailsActivity">

    <!--
        FICA FALTANDO:
        listagem de solicitações de participação com respectivos botões de aprovar ou reprovar.
    -->

    <TextView
        android:id="@+id/place_name_scheduling_details_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/days_of_week_layout_scheduling_details_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/place_name_scheduling_details_activity"/>

    <TextView
        android:id="@+id/available_scheduling_details_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/days_of_week_layout_scheduling_details_activity"/>

    <TextView
        android:id="@+id/schedule_owner_scheduling_details_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/available_scheduling_details_activity"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons_container_scheduling_details_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/schedule_owner_scheduling_details_activity">

        <Button
            android:id="@+id/schedule_button_activity_scheduling_details"
            android:layout_width="130dp"
            android:minWidth="105dp"
            android:layout_height="wrap_content"
            android:text="Agendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/scheduling_cancel_button_activity_scheduling_details"
            android:layout_marginHorizontal="0dp"/>

        <Button
            android:id="@+id/scheduling_cancel_button_activity_scheduling_details"
            android:layout_width="130dp"
            android:minWidth="115dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            app:layout_constraintStart_toEndOf="@id/schedule_button_activity_scheduling_details"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/participate_button_activity_scheduling_details"
            android:layout_marginHorizontal="0dp"/>

        <Button
            android:id="@+id/participate_button_activity_scheduling_details"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Participar"
            app:layout_constraintStart_toEndOf="@id/scheduling_cancel_button_activity_scheduling_details"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>